@model Programowanie_zaawansowane_zaliczenie.Models.ContactVievModel

@{
    ViewData["Title"] = "Create";

}

<h1>Dodawanie kontaktu</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" minlength="3" maxlength="20" placeholder="np. Jan" autofocus="autofocus" required="required"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" minlength="3" maxlength="50" required="required"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" pattern="[0-9]" title="Wprowadź same cyfry" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adress.Street" class="control-label"></label>
                <input asp-for="Adress.Street" class="form-control" />
                <span asp-validation-for="Adress.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adress.PostCode" class="control-label"></label>
                <input asp-for="Adress.PostCode" class="form-control" />
                <span asp-validation-for="Adress.PostCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adress.City" class="control-label"></label>
                <input asp-for="Adress.City" class="form-control" />
                <span asp-validation-for="Adress.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adress.Country" class="control-label"></label>
                <input asp-for="Adress.Country" class="form-control" />
                <span asp-validation-for="Adress.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FbLink" class="control-label"></label>
                <input asp-for="FbLink" class="form-control" />
                <span asp-validation-for="FbLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" for="ContactCategoryID">Kategorie</label>
                    @Html.DropDownList("ContactCategoryID", new SelectList(ViewBag.list, "Id", "CategoryName"), htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ContactCategoryID)
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
                <input type='reset' value="Wypełnij ponownie" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-info" asp-action="Index">Wróć do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
